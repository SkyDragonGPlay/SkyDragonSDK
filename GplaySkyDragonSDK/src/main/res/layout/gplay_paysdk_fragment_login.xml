<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gplay_paysdk_bg_protrait">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:id="@+id/back"
            android:layout_alignParentLeft="true"
            android:background="@drawable/gplay_paysdk_back" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:id="@+id/goRegister"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/gplay_paysdk_go_register"
            android:scaleType="fitCenter"
            android:background="#00000000"
            android:contentDescription="@android:string/ok" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/gplay_paysdk_login"
            android:contentDescription="@android:string/ok"
            android:scaleType="fitCenter"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="#00000000" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/gplay_paysdk_username"
            android:scaleType="fitCenter"
            android:contentDescription="@android:string/ok" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:id="@+id/username"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:inputType="text"
            android:textColor="#333"
            android:textSize="16sp"
            android:singleLine="true"
            android:hint="@string/GplayThirdSdk_hintInputUsername"
            android:textColorHint="#999"
            android:background="@drawable/gplay_paysdk_box" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/gplay_paysdk_password"
            android:scaleType="fitCenter"
            android:contentDescription="@android:string/ok" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:id="@+id/userpwd"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textColor="#333"
            android:textSize="16sp"
            android:singleLine="true"
            android:hint="@string/GplayThirdSdk_hintInputPassword"
            android:textColorHint="#999"
            android:inputType="textPassword"
            android:background="@drawable/gplay_paysdk_box" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="20dp">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/doLogin"
            android:layout_weight="1"
            android:src="@drawable/gplay_paysdk_btn_login"
            android:scaleType="fitXY"
            android:contentDescription="@android:string/ok"
            android:background="#00000000" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/doSkip"
            android:layout_weight="1"
            android:src="@drawable/gplay_paysdk_skip"
            android:layout_marginLeft="6dp"
            android:scaleType="fitXY"
            android:contentDescription="@android:string/ok"
            android:background="#00000000" />
    </LinearLayout>

    <Button
        android:layout_width="80dp"
        android:layout_height="32dp"
        android:text="@string/GplayThirdSdk_doGetPassword"
        android:id="@+id/doGetPassword"
        android:layout_gravity="right"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:background="#00000000"
        android:gravity="center_vertical|right"
        android:textSize="12sp"
        android:textColor="#777" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewError"
        android:layout_gravity="center_horizontal"
        android:textColor="#f45050"
        android:textSize="16sp"
        android:background="@drawable/gplay_paysdk_rectangle"
        android:padding="6dp"
        android:visibility="gone" />
</LinearLayout>